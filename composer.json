{
    "name": "Webfactor/LaravelBackpackDocuments",
    "type": "library",
    "description": "Ready to use Documents Backpack CRUD with API route for eg. privacy statement, imprint, sbt or gtc",
    "keywords": [
        "Webfactor",
        "Laravel",
        "Backpack",
        "Documents"
    ],
    "homepage": "https://github.com/Webfactor/laravel-backpack-documents",
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Ziegler",
            "email": "oliver.ziegler@webfactor.de",
            "homepage": "http://webfactor.de",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0",
        "backpack/crud": "^3.3.0",
        "spatie/laravel-fractal": "^5.2",
        "webfactor/laravel-apicontroller": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Webfactor\\LaravelBackpackDocuments\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webfactor\\LaravelBackpackDocuments\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Webfactor\\LaravelBackpackDocuments\\LaravelBackpackDocumentsServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
